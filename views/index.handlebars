<h1>Eat-da-Burger!</h1>

<h2>Un-Eaten burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless eaten}}
      {{> burgers/burger-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if eaten}}
      {{> burgers/burger-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="brgr">Burger Name:</label>
    <input type="text" id="brgr" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Has this burger already been eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> YUP!<br>
    <input type="radio" name="eaten" value="0"> NOT YET!
  </div>

  <button type="submit">Submit Burger</button>
</form>
